<html>
  <head>
    <meta charset="utf-8">
    <title>Test</title>
    <!--<link rel="stylesheet" type="text/css" href="/css/style.css">-->
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
    <style>
    @import url('https://fonts.googleapis.com/css?family=Open+Sans:300');
    html {
      scroll-behavior: smooth;
    }

    body {
      overflow: hidden;
    }

    .welcome-section {
      position: relative;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      height: auto;
      width: 100%;
    }

    #title {
      font-size: 6vw;
      font-weight: bold;
      color: green;
    }

    #subtitle {
      font-size: 3vw;
      color: black;
    }

    .header {
      height: 10vh;
    }

    .addgif-section {
      width: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 1vw;
    }

    .addsound-section {
      width: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 1vw;
    }

    .review-section {
      height: 75vh;
      width: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 1vw;
    }

    .progress {
      height: 15vh;
      width: 100%;
      position: fixed;
      background-color: red;
      bottom: 0;
      font-size: 10vw;
    }

    .page-action {
      display: inline-block;
      bottom: 0;
      right: 0;
    }

    </style>
    <!--<link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>-->

    <script type="text/javascript" src="/js/bootstrap.js"></script>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/index.js"></script>
  </head>
  <body>
    <div class="welcome-section">
      <!-- WELCOME SECTION. APP TITLE AND BUTTON TO GET STARTED. -->
      <div id="title">GIFovie</div>
      <div id="subtitle">Make Movies Out of GIFs</div>
      <button class="btn btn-lg btn-primary" id="getStartedBtn" onclick="getStarted()">Get Started</button>
    </div>
    <div class="addgif-section">
      <!-- ADD GIFS TO YOUR GIFOVIE -->
      <div class="page-action">
        <button class="btn btn-secondary" id="backToWelcomeBtn">Cancel</button>
        <button class="btn btn-primary" id="goToAddSoundBtn">Next: Add Sound!</button>
      </div>
    </div>
    <div class="addsound-section">
      <!-- ADD SOUNDS TO YOUR GIFOVIE -->
      <div class="page-action">
        <button class="btn btn-secondary" id="backToWelcomeBtn">Back</button>
        <button class="btn btn-primary" id="goToAddSoundBtn">Review Your GIFovie</button>
      </div>
    </div>
    <div class="review-section">
      <!-- REVIEW AND SHARE YOUR GIFOVIE -->
      <div class="page-action">
        <button class="btn btn-secondary" id="backToWelcomeBtn">Back</button>
        <button class="btn btn-primary" id="goToAddSoundBtn">Share!</button>
      </div>
    </div>
    <div class="progress">
      <!-- FIXED PROGRESS BAR GOES HERE -->
    </div>
  </body>
</html>
